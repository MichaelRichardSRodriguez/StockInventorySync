@model Product


@{
	ViewData["Title"] = "Category Details";
	var recordStatus = Model?.Status?.ToUpper() == "ACTIVE" ? "ACTIVATED" : "DEACTIVATED";
	var statusAlert = Model?.Status == "Active" ? "alert alert-success" : "alert alert-danger";
	var userStatusModifier = Model?.ActivatedDeactivatedBy;
	var dateStatusModified = Model?.DateActivatedDeactivated;
}

<div class="mt-4 row justify-content-center">
	<!-- Card for Product Details -->
	<div class="card border-light shadow bg-primary-subtle col-md-8">
		<div class="card-header bg-primary text-light mt-2"> <h4 class="card-title">Product Details</h4> </div>
		<div class="card-body">
			<div class="row">
				<div class="col-7">
					<dl class="row">
						<div class="mt-3 mb-3">
							<dt class="col-sm-5">
								@Html.DisplayNameFor(model => model.Name)
							</dt>
							<dd class="col-sm-12">
								@Html.DisplayFor(model => model.Name)
							</dd>
							<dt class="col-sm-5">
								@Html.DisplayNameFor(model => model.Description)
							</dt>
							<dd class="col-sm-12">
								@Html.DisplayFor(model => model.Description)
							</dd>
							<dt class="col-sm-5">
								@Html.DisplayNameFor(model => model.DateCreated)
							</dt>
							<dd class="col-sm-12">
								@Html.DisplayFor(model => model.DateCreated)
							</dd>
							<dt class="col-sm-5">
								@Html.DisplayNameFor(model => model.CreatedBy)
							</dt>
							<dd class="col-sm-12">
								@Html.DisplayFor(model => model.CreatedBy)
							</dd>
							@if (Model.UpdatedBy != null)
							{
								<dt class="col-sm-5">
									@Html.DisplayNameFor(model => model.DateUpdated)
								</dt>
								<dd class="col-sm-12">
									@Html.DisplayFor(model => model.DateUpdated)
								</dd>

								<dt class="col-sm-5">
									@Html.DisplayNameFor(model => model.UpdatedBy)
								</dt>
								<dd class="col-sm-12">
									@Html.DisplayFor(model => model.UpdatedBy)
								</dd>
							}
						</div>
					</dl>
				</div>
				<div class="col-5">
					<div class="@statusAlert">
						This Category is <strong>@recordStatus</strong>
						as of <strong>@Model.DateActivatedDeactivated?.ToString("MMMM dd, yyyy 'at'  hh:mm tt")</strong>
						by <strong>@userStatusModifier</strong>
					</div>
				</div>
			</div>
		</div>

		<div class="card-footer">

			@if (Model.Status == "Active")
			{
				<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Product_Id">Edit</a>
			}

			<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.Product_Id">Delete</a>
			<a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
		</div>
	</div>
</div>



